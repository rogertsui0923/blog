<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'navbar' %>
    <div class="container">
      <% flash.each do |name, msg| %>
        <% if name == 'notice' %>
          <%= content_tag :div, msg, class: 'alert alert-success' %>
        <% elsif name == 'alert' %>
          <%= content_tag :div, msg, class: 'alert alert-danger' %>
        <% end %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
